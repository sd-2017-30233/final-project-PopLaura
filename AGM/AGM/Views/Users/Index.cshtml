@model IEnumerable<AGM.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>Users</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr class="warning">
        <th>
            @Html.DisplayNameFor(model => model.role_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.amounnt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.short_description)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.role_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.amounnt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.short_description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.users_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.users_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.users_id })
            </td>
        </tr>
    }

</table>
