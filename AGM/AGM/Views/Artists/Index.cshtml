@model IEnumerable<AGM.Models.Artist>

@{
    ViewBag.Title = "Index";
}

<h2>Artists</h2>
@if (Session["UserID"] != null)
{
    if (Session["RoleID"].Equals("1"))
    {
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    }
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.artist_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.birthday_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.birth_place)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.artist_description)
        </th>
        <th>Options</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.artist_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.birthday_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.birth_place)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.artist_description)
        </td>
        <td>
            @if (Session["UserID"] != null)
            {
                if (Session["RoleID"].Equals("1"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.artist_id })

                    @Html.ActionLink("Delete", "Delete", new { id = item.artist_id })
                }
            }
            @Html.ActionLink("Details", "Details", new { id = item.artist_id })
            
        </td>
    </tr>
}

</table>
